{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/vl-kp/json-schema/main/v0.0.1/schema-base-strict.json",
    "type": "object",
    "required": [
        "serviceName",
        "teamOwner",
        "image",
        "workloadType"
    ],
    "properties": {
        "api": {
            "$ref": "https://raw.githubusercontent.com/vl-kp/json-schema/main/v0.0.1/schema-api-strict.json"
        },
        "frontend": {
            "$ref": "https://raw.githubusercontent.com/vl-kp/json-schema/main/v0.0.1/schema-api-strict.json"
        },
        "stream": {
            "$ref": "https://raw.githubusercontent.com/vl-kp/json-schema/main/v0.0.1/schema-stream-strict.json"
        },
        "connector": {
            "$ref": "https://raw.githubusercontent.com/vl-kp/json-schema/main/v0.0.1/schema-connector-strict.json"
        },
        "env": {
            "type": "string",
            "enum": [
                "dev",
                "prod"
            ]
        },
        "serviceName": {
            "type": "string",
            "minLength": 3
        },
        "teamOwner": {
            "type": "string",
            "minLength": 3
        },
        "image": {
            "type": "object",
            "properties": {
                "registry": {
                    "type": "string"
                },
                "repository": {
                    "type": "string",
                    "pattern": "^(dev|stable)/"
                },
                "tag": {
                    "type": "string",
                    "minLength": 4
                },
                "port": {
                    "type": "integer",
                    "minimum": 80,
                    "maximum": 65534
                }
            },
            "required": [
                "repository"
            ]
        },
        "workloadType": {
            "type": "string",
            "enum": [
                "api",
                "frontend",
                "stream",
                "connector",
                "cronjob"
            ]
        }
    },
    "allOf": [
        {
            "if": {
                "properties": {
                    "workloadType": {
                        "const": "api"
                    }
                }
            },
            "then": {
                "required": [
                    "api"
                ]
            }
        },
        {
            "if": {
                "properties": {
                    "workloadType": {
                        "const": "frontend"
                    }
                }
            },
            "then": {
                "required": [
                    "frontend"
                ]
            }
        },
        {
            "if": {
                "properties": {
                    "workloadType": {
                        "const": "stream"
                    }
                }
            },
            "then": {
                "required": [
                    "stream"
                ]
            }
        },
        {
            "if": {
                "properties": {
                    "workloadType": {
                        "const": "connector"
                    }
                }
            },
            "then": {
                "required": [
                    "connector"
                ]
            }
        },
        {
            "if": {
                "properties": {
                    "workloadType": {
                        "const": "cronjob"
                    }
                }
            },
            "then": {
                "required": [
                    "cronjob"
                ]
            }
        }
    ]
}
