{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/vl-kp/json-schema/main/v0.0.1/schema-base.json",
    "type": "object",
    "properties": {
        "api": {
            "$ref": "https://raw.githubusercontent.com/vl-kp/json-schema/main/v0.0.1/schema-api.json"
        },
        "frontend": {
            "$ref": "https://raw.githubusercontent.com/vl-kp/json-schema/main/v0.0.1/schema-api.json"
        },
        "stream": {
            "$ref": "https://raw.githubusercontent.com/vl-kp/json-schema/main/v0.0.1/schema-stream.json"
        },
        "connector": {
            "$ref": "https://raw.githubusercontent.com/vl-kp/json-schema/main/v0.0.1/schema-connector.json"
        },
        "env": {
            "type": "string",
            "enum": [
                "dev",
                "prod"
            ]
        },
        "serviceName": {
            "type": "string",
            "minLength": 3
        },
        "teamOwner": {
            "type": "string",
            "minLength": 3
        },
        "image": {
            "type": "object",
            "properties": {
                "registry": {
                    "type": "string"
                },
                "repository": {
                    "type": "string",
                    "pattern": "^(dev|stable)/"
                },
                "tag": {
                    "type": "string",
                    "minLength": 4
                },
                "port": {
                    "type": "integer",
                    "minimum": 80,
                    "maximum": 65534
                }
            }
        },
        "workloadType": {
            "type": "string",
            "enum": [
                "api",
                "frontend",
                "stream",
                "connector",
                "cronjob"
            ]
        }
    }
}
