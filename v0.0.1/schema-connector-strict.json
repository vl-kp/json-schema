{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/vl-kp/json-schema/main/v0.0.1/schema-connector.json",
    "type": "object",
    "required": [
        "kafka",
        "schemaRegistry",
        "connectorType"
    ],
    "allOf": [
        {
            "if": {
                "properties": {
                    "connectorType": {
                        "const": "jdbc-sink"
                    }
                }
            },
            "then": {
                "required": [
                    "postgresSecretPath",
                    "jdbc-sink"
                ]
            }
        },
        {
            "if": {
                "properties": {
                    "connectorType": {
                        "const": "jdbc-source"
                    }
                }
            },
            "then": {
                "required": [
                    "postgresSecretPath",
                    "jdbc-source"
                ]
            }
        },
        {
            "if": {
                "properties": {
                    "connectorType": {
                        "const": "sf-sink"
                    }
                }
            },
            "then": {
                "required": [
                    "sf-sink"
                ]
            }
        },
        {
            "if": {
                "properties": {
                    "connectorType": {
                        "const": "es-sink"
                    }
                }
            },
            "then": {
                "required": [
                    "elasticsearchSecretPath",
                    "es-sink"
                ]
            }
        }
    ],
    "properties": {
        "kafka": {
            "type": "object",
            "properties": {
                "bootstrapEndpoint": {
                    "type": "string"
                },
                "restEndpoint": {
                    "type": "string"
                },
                "clusterID": {
                    "type": "string"
                },
                "secretPath": {
                    "type": "string"
                }
            },
            "required": [
                "bootstrapEndpoint"
            ]
        },
        "schemaRegistry": {
            "type": "object",
            "properties": {
                "url": {
                    "type": "string"
                },
                "secretPath": {
                    "type": "string"
                }
            },
            "required": [
                "url"
            ]
        },
        "connectReplicas": {
            "type": "integer",
            "minimum": 1,
            "maximum": 50
        },
        "connectImage": {
            "type": "object",
            "properties": {
                "application": {
                    "type": "string"
                },
                "init": {
                    "type": "string"
                }
            }
        },
        "logLevel": {
            "type": "string",
            "enum": [
                "DEBUG",
                "INFO",
                "WARN",
                "ERROR"
            ]
        },
        "podTemplate": {
            "type": "object",
            "properties": {
                "affinity": {
                    "type": "object"
                },
                "podSecurityContext": {
                    "type": "object",
                    "properties": {
                        "runAsUser": {
                            "type": "integer"
                        },
                        "runAsGroup": {
                            "type": "integer"
                        },
                        "fsGroup": {
                            "type": "integer"
                        }
                    }
                },
                "probe": {
                    "type": "object",
                    "properties": {
                        "startupProbe": {
                            "type": "object",
                            "properties": {
                                "initialDelaySeconds": {
                                    "type": "integer",
                                    "minimum": 0,
                                    "maximum": 300
                                },
                                "periodSeconds": {
                                    "type": "integer",
                                    "minimum": 1,
                                    "maximum": 300
                                },
                                "timeoutSeconds": {
                                    "type": "integer",
                                    "minimum": 1,
                                    "maximum": 300
                                },
                                "successThreshold": {
                                    "type": "integer",
                                    "enum": [
                                        1
                                    ]
                                },
                                "failureThreshold": {
                                    "type": "integer",
                                    "minimum": 1,
                                    "maximum": 10
                                }
                            }
                        },
                        "livenessProbe": {
                            "type": "object",
                            "properties": {
                                "initialDelaySeconds": {
                                    "type": "integer",
                                    "minimum": 0,
                                    "maximum": 300
                                },
                                "periodSeconds": {
                                    "type": "integer",
                                    "minimum": 1,
                                    "maximum": 300
                                },
                                "timeoutSeconds": {
                                    "type": "integer",
                                    "minimum": 1,
                                    "maximum": 300
                                },
                                "successThreshold": {
                                    "type": "integer",
                                    "enum": [
                                        1
                                    ]
                                },
                                "failureThreshold": {
                                    "type": "integer",
                                    "minimum": 1,
                                    "maximum": 10
                                }
                            }
                        },
                        "readinessProbe": {
                            "type": "object",
                            "properties": {
                                "initialDelaySeconds": {
                                    "type": "integer",
                                    "minimum": 0,
                                    "maximum": 300
                                },
                                "periodSeconds": {
                                    "type": "integer",
                                    "minimum": 1,
                                    "maximum": 300
                                },
                                "timeoutSeconds": {
                                    "type": "integer",
                                    "minimum": 1,
                                    "maximum": 300
                                },
                                "successThreshold": {
                                    "type": "integer",
                                    "minimum": 1,
                                    "maximum": 10
                                },
                                "failureThreshold": {
                                    "type": "integer",
                                    "minimum": 1,
                                    "maximum": 10
                                }
                            }
                        }
                    }
                },
                "resources": {
                    "type": "object",
                    "properties": {
                        "cpu": {
                            "oneOf": [
                                {
                                    "type": "string",
                                    "pattern": "^(\\d+(\\.\\d+)?)(m)?$"
                                },
                                {
                                    "type": "number"
                                }
                            ]
                        },
                        "memory": {
                            "type": "string",
                            "pattern": "^(\\d+(\\.\\d+)?)([EPTGMK]i?)?$"
                        },
                        "limits": {
                            "type": "object",
                            "properties": {
                                "cpu": {
                                    "oneOf": [
                                        {
                                            "type": "string",
                                            "pattern": "^(\\d+(\\.\\d+)?)(m)?$"
                                        },
                                        {
                                            "type": "number"
                                        }
                                    ]
                                },
                                "memory": {
                                    "type": "string",
                                    "pattern": "^(\\d+(\\.\\d+)?)([EPTGMK]i?)?$"
                                }
                            },
                            "anyOf": [
                                {
                                    "required": [
                                        "cpu"
                                    ]
                                },
                                {
                                    "required": [
                                        "memory"
                                    ]
                                }
                            ]
                        },
                        "requests": {
                            "type": "object",
                            "properties": {
                                "cpu": {
                                    "oneOf": [
                                        {
                                            "type": "string",
                                            "pattern": "^(\\d+(\\.\\d+)?)(m)?$"
                                        },
                                        {
                                            "type": "number"
                                        }
                                    ]
                                },
                                "memory": {
                                    "type": "string",
                                    "pattern": "^(\\d+(\\.\\d+)?)([EPTGMK]i?)?$"
                                }
                            },
                            "anyOf": [
                                {
                                    "required": [
                                        "cpu"
                                    ]
                                },
                                {
                                    "required": [
                                        "memory"
                                    ]
                                }
                            ]
                        }
                    },
                    "anyOf": [
                        {
                            "required": [
                                "cpu"
                            ]
                        },
                        {
                            "required": [
                                "memory"
                            ]
                        },
                        {
                            "required": [
                                "requests"
                            ]
                        },
                        {
                            "required": [
                                "limits"
                            ]
                        }
                    ]
                }
            }
        },
        "connectConfigOverrides": {
            "type": "object"
        },
        "postgresSecretPath": {
            "type": "string",
            "pattern": "^k8s/(dev|prod)/common/"
        },
        "elasticsearchSecretPath": {
            "type": "string",
            "pattern": "^k8s/"
        },
        "topics": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z0-9_]+$": {
                    "type": "object",
                    "properties": {
                        "partitionCount": {
                            "type": "integer",
                            "minimum": 1,
                            "maximum": 50
                        },
                        "replicas": {
                            "type": "integer",
                            "minimum": 1,
                            "maximum": 50
                        },
                        "configs": {
                            "type": "object"
                        }
                    }
                }
            }
        },
        "connectorType": {
            "type": "string",
            "enum": [
                "none",
                "jdbc-sink",
                "jdbc-source",
                "sf-sink",
                "es-sink"
            ]
        },
        "es-sink": {
            "type": "object",
            "properties": {
                "topics": {
                    "type": "string"
                },
                "esUrl": {
                    "type": "string"
                },
                "config": {
                    "type": "object"
                },
                "overrideConfig": {
                    "type": "object"
                }
            }
        },
        "jdbc-sink": {
            "type": "object",
            "properties": {
                "topics": {
                    "type": "string"
                },
                "jdbcUrl": {
                    "type": "string"
                },
                "config": {
                    "type": "object"
                },
                "overrideConfig": {
                    "type": "object"
                }
            }
        }
    }
}
