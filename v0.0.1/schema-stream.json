{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/vl-kp/json-schema/main/v0.0.1/schema-stream.json",
    "type": "object",
    "properties": {
        "imagePullPolicy": {
            "type": "string",
            "enum": [
                "Always",
                "IfNotPresent",
                "Never"
            ]
        },
        "replicas": {
            "type": "integer",
            "minimum": 1,
            "maximum": 99
        },
        "securityContext": {
            "type": "object",
            "properties": {
                "runAsUser": {
                    "type": "integer"
                },
                "runAsGroup": {
                    "type": "integer"
                },
                "fsGroup": {
                    "type": "integer"
                }
            }
        },
        "containerSecurityContext": {
            "type": "object",
            "properties": {
                "runAsNonRoot": {
                    "type": "boolean"
                }
            }
        },
        "lifecycle": {
            "type": "object",
            "properties": {
                "preStop": {
                    "type": "object",
                    "properties": {
                        "exec": {
                            "type": "object",
                            "properties": {
                                "command": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            },
                            "required": [
                                "command"
                            ]
                        }
                    }
                }
            }
        },
        "startupProbe": {
            "type": "object",
            "properties": {
                "httpGet": {
                    "type": "object",
                    "properties": {
                        "path": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "path"
                    ]
                },
                "initialDelaySeconds": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 300
                },
                "periodSeconds": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 300
                },
                "timeoutSeconds": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 300
                },
                "successThreshold": {
                    "type": "integer",
                    "enum": [
                        1
                    ]
                },
                "failureThreshold": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 10
                }
            }
        },
        "livenessProbe": {
            "type": "object",
            "properties": {
                "httpGet": {
                    "type": "object",
                    "properties": {
                        "path": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "path"
                    ]
                },
                "initialDelaySeconds": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 300
                },
                "periodSeconds": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 300
                },
                "timeoutSeconds": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 300
                },
                "successThreshold": {
                    "type": "integer",
                    "enum": [
                        1
                    ]
                },
                "failureThreshold": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 10
                }
            }
        },
        "readinessProbe": {
            "type": "object",
            "properties": {
                "httpGet": {
                    "type": "object",
                    "properties": {
                        "path": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "path"
                    ]
                },
                "initialDelaySeconds": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 300
                },
                "periodSeconds": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 300
                },
                "timeoutSeconds": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 300
                },
                "successThreshold": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 10
                },
                "failureThreshold": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 10
                }
            }
        },
        "resources": {
            "type": "object",
            "properties": {
                "cpu": {
                    "oneOf": [
                        {
                            "type": "string",
                            "pattern": "^(\\d+(\\.\\d+)?)(m)?$"
                        },
                        {
                            "type": "number"
                        }
                    ]
                },
                "memory": {
                    "type": "string",
                    "pattern": "^(\\d+(\\.\\d+)?)([EPTGMK]i?)?$"
                },
                "limits": {
                    "type": "object",
                    "properties": {
                        "cpu": {
                            "oneOf": [
                                {
                                    "type": "string",
                                    "pattern": "^(\\d+(\\.\\d+)?)(m)?$"
                                },
                                {
                                    "type": "number"
                                }
                            ]
                        },
                        "memory": {
                            "type": "string",
                            "pattern": "^(\\d+(\\.\\d+)?)([EPTGMK]i?)?$"
                        }
                    },
                    "anyOf": [
                        {
                            "required": [
                                "cpu"
                            ]
                        },
                        {
                            "required": [
                                "memory"
                            ]
                        }
                    ]
                },
                "requests": {
                    "type": "object",
                    "properties": {
                        "cpu": {
                            "oneOf": [
                                {
                                    "type": "string",
                                    "pattern": "^(\\d+(\\.\\d+)?)(m)?$"
                                },
                                {
                                    "type": "number"
                                }
                            ]
                        },
                        "memory": {
                            "type": "string",
                            "pattern": "^(\\d+(\\.\\d+)?)([EPTGMK]i?)?$"
                        }
                    },
                    "anyOf": [
                        {
                            "required": [
                                "cpu"
                            ]
                        },
                        {
                            "required": [
                                "memory"
                            ]
                        }
                    ]
                }
            },
            "additionalProperties": false,
            "anyOf": [
                {
                    "required": [
                        "cpu"
                    ]
                },
                {
                    "required": [
                        "memory"
                    ]
                },
                {
                    "required": [
                        "requests"
                    ]
                },
                {
                    "required": [
                        "limits"
                    ]
                }
            ]
        },
        "terminationGracePeriodSeconds": {
            "type": "integer",
            "minimum": 10,
            "maximum": 300
        },
        "env": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z0-9_]+$": {
                    "type": "object",
                    "properties": {
                        "value": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "value"
                    ]
                }
            },
            "additionalProperties": false
        },
        "secrets": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z0-9_]+$": {
                    "type": "object",
                    "properties": {
                        "secretsManagerPath": {
                            "type": "string",
                            "pattern": "^k8s/(dev|prod)/common/"
                        },
                        "property": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "secretsManagerPath",
                        "property"
                    ]
                }
            },
            "additionalProperties": false
        },
        "statefulSet": {
            "type": "object",
            "properties": {
                "labels": {
                    "type": "object"
                },
                "annotations": {
                    "type": "object"
                },
                "serviceName": {
                    "type": "string"
                },
                "revisionHistoryLimit": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 20
                },
                "updateStrategy": {
                    "type": "string"
                },
                "serviceAccount": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "name": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "service": {
            "type": "object",
            "properties": {
                "port": {
                    "type": "string"
                }
            }
        },
        "serviceAccount": {
            "type": "object",
            "properties": {
                "create": {
                    "type": "boolean"
                },
                "annotations": {
                    "type": "object",
                    "properties": {
                        "eks.amazonaws.com/role-arn": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "eks.amazonaws.com/role-arn"
                    ]
                }
            }
        },
        "exposureType": {
            "type": "string",
            "enum": [
                "none",
                "internal",
                "customerfacing",
                "thirdparty"
            ]
        },
        "overrideHostname": {
            "type": "string"
        },
        "additionalDomainNames": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "uniqueItems": true
        },
        "authorizedSources": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "uniqueItems": true
        },
        "ingress": {
            "type": "object",
            "properties": {
                "scheme": {
                    "type": "string",
                    "enum": [
                        "internet-facing",
                        "internal"
                    ]
                }
            }
        },
        "datadog": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "profiling": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        }
                    }
                },
                "tracing": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "sample_rate": {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 1
                        }
                    }
                }
            }
        }
    }
}
